{
    "name": "Echo360+",
    "description": "Provides various improvements to the Echo360 video streamer/downloader",
    "version": "1.3.2",
    "manifest_version": 2,
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://echo360.org/section/*",
                "http://echo360.org/section/*",
                "https://echo360.au.org/section/*",
                "http://echo360.au.org/section/*"
            ],
            "js": [
                "js/custom-file-names.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://echo360.org/lesson/*",
                "http://echo360.org/lesson/*",
                "https://echo360.au.org/lesson/*",
                "http://echo360.au.org/lesson/*"
            ],
            "js": [
                "js/more-speed-options.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://echo360.org/section/*",
                "http://echo360.org/section/*",
                "https://echo360.au.org/section/*",
                "http://echo360.au.org/section/*"
            ],
            "js": [
                "js/day-with-dates.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://echo360.org/section/*",
                "http://echo360.org/section/*",
                "https://echo360.au.org/section/*",
                "http://echo360.au.org/section/*"
            ],
            "css": [
                "css/reposition-popup.css"
            ],
            "all_frames": true
        },
        {
            "matches": [
                "https://echo360.org/section/*",
                "http://echo360.org/section/*",
                "https://echo360.au.org/section/*",
                "http://echo360.au.org/section/*"
            ],
            "js": [
                "js/hide-future-lectures.js"
            ],
            "css": [
                "css/hide-future-lectures.css"
            ],
            "all_frames": true,
            "run_at": "document_end"
        }
    ]
}